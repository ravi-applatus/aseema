                    <script type="text/javascript">
                        $(document).ready(function() {

                            //Open file dialog browser 
                            $("#openFileDialog").click(function(e) {
                                $("#image")[0].click();
                            });



                            $("#image").change(function() {
                                let fileInput = document.getElementById("image");
                                let file = fileInput.files[0];
                                console.log(file);
                                if (file) {
                                    let fileType = file.type;
                                    let validExtensions = ['image/png', 'image/jpeg', 'image/jpg'];
                                    if (validExtensions.includes(fileType)) {
                                        let reader = new FileReader();
                                        reader.onload = (e) => {
                                            var output = document.getElementById('prv_img');
                                            output.src = e.target.result;
                                            $(".prv-div").removeClass("d-none");
                                            $("#prv_file_name").html(file.name);
                                        };
                                        reader.readAsDataURL(file);
                                    }
                                }
                            });
                        });                        
                 </script>
 
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"
                        integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw=="
                        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
                    <script type="text/javascript">
                        $(document).ready(function () {
                            var delete_id = null;
                            $(".delete-icon").click(function () {
                                delete_id = $(this).attr('id');
                            });


                            $("#delete-record").click(function () {
                                if (delete_id > 0) {
                                    $.ajax({
                                        type: "POST",
                                        url: "<%=baseurl%>admin/settings/dropdown-settings/delete",
                                        data: { "id": delete_id },
                                        dataType: "json",
                                        success: function (resp) {
                                            resp = JSON.parse(JSON.stringify(resp));
                                            if (resp.success) {
                                                Swal.fire(
                                                    resp.message,
                                                    '',
                                                    'success',
                                                ).then(function () {
                                                    location.reload();
                                                })
                                            }
                                        },
                                        error: function (error) {
                                            console.log(error);
                                            if (error.success) {
                                                Swal.fire(
                                                    error.message,
                                                    '',
                                                    'error',
                                                )
                                            }
                                        }
                                    });
                                }
                            });
                        });

                    </script>
                    <script>
                        function optionslist(val) {
                            // const selectedOption = $('input[name="Drop"]:checked').map(function () {
                            //     return $(this).val();
                            // }).get();
                            // alert(val);
                            // alert(selectedOption);
                            $.ajax({
                                url: "<%= adminbaseurl %>settings/dropdown-settings-options",
                                type: "GET",
                                data: { dropdownSettingId: val },
                                success: function (response) {
                                    $("#xyz").empty();
                                    response.DropdownSettingsOptions.forEach(function (dropdown) {
                                        $("#xyz").append(
                                            `<tr>
                                            <td>${dropdown.optionLabel}</td>
                                            <td>${dropdown.optionValue}</td>
                                            <td>${dropdown.optionOrder}</td>
                                        </tr>`);
                                    });
                                },
                                error: function (e) {
                                    console.log("ERROR:", e);
                                },
                            });
                        }

                    </script>
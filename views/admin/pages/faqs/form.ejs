<div class="vertical-overlay"></div>

<!-- ============================================================== -->
<!-- Start right Content here -->
<!-- ============================================================== -->
  <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                <h4 class="mb-sm-0">Create Faqs</h4>

                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="javascript: void(0);">Ecommerce</a></li>
                                        <li class="breadcrumb-item active">Create Faqs</li>
                                    </ol>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <form id="createproduct-form"  class="needs-validation" method="post" action="/admin/faqs/form" novalidate enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="card-body">
                                        <div class="mb-3" style="display: none;">
                                            <input type="hidden" class="form-control" id="updateId" name="updateId" value= "<%= faqsData.id || '' %>"  required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="title-input">Question</label>
                                            <input type="text" class="form-control" id="product-title-input" value="<%= faqsData.question || '' %>" name="question"  required>
                                            <div class="invalid-feedback">Please Enter Question.</div>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label" for="slug-input">Answer</label>
                                            <textarea type="text" class="form-control" id="slug-input" rows="5"  name="answer" required><%= faqsData.answer%></textarea>
                                            <div class="invalid-feedback">Please Enter Answer.</div>
                                        </div>
                                        
                                    </div>
                                </div>
                              

                            </div>
                            
                            
                            <!-- end col -->
                        </div>
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Publish</h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="choices-publish-status-input" class="form-label">Status</label>

                                        <select class="form-select" name="status" id="choices-publish-status-input" data-choices data-choices-search-false>
                                            <option value="Yes" <%= faqsData.status === 'Yes' ? 'selected' : '' %>>active</option>
                                            <option value="No" <%= faqsData.status === 'No' ? 'selected' : '' %>>inactive</option>
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label" for="seq-input">Sequence</label>
                                        
                                        <input type="number" class="form-control d-none" minlength="1" maxlength="100" id="product-id-input">
                                        <!-- <input id="sequence" class="form-control" name="sequence" type="number" value=""> -->
                                        <input type="number" class="form-control" id="seq-input" name="sequence" value="<%= faqsData.sequence || '' %>" placeholder="Enter Sequence" required>
                                        <div class="invalid-feedback">Please Enter a Sequence</div>
                                    </div>
                                </div>
                                <!-- end card body -->
                                <div class="text-end mb-3">
                                    
                                    <button type="submit" class="btn btn-success w-sm">Submit</button>
                                </div>
                            </div>
                            <!-- end card -->

                          
                        </div>
                        <!-- end row -->

                    </form>

                </div>
                <!-- container-fluid -->
            </div>
            <!-- End Page-content -->

            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <script>document.write(new Date().getFullYear())</script> Â© Velzon.
                        </div>
                        <div class="col-sm-6">
                            <div class="text-sm-end d-none d-sm-block">
                                Design & Develop by Themesbrand
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>

</div>

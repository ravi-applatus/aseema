                                                <th class="sort" data-sort="slug">Answer</th>
                                                <th class="sort" data-sort="slug">Sequence</th>
                                                <th class="sort" data-sort="status">Status</th>
                                                <th class="sort" data-sort="action">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody class="list form-check-all">
                                            <% var i=1; faqslist.forEach(function(faqs) { %>
                                                <tr>
                                                    
                                                    <!-- <td class="id" style="display:none;"><a href="javascript:void(0);" class="fw-medium link-primary">#VZ2101</a></td> -->
                                                    
                                                  
                                                   <td class="name" id="<%= faqs.question %>"><%= faqs.question %> </td>
                                                   <td class="question" style="text-wrap: balance;"><%= faqs.answer %> </td>
                                                   <td class="question"><%= faqs.sequence %> </td>
                                                   <td class="status"><%= faqs.status %> </td>
                                                   
                                                   <td>
                                                    <div class="d-flex gap-2">
                                                        <div class="edit">
                                                            <a href="/admin/faqs/form/<%= faqs.id %>"><button class="btn btn-sm  edit-item-btn" data-bs-toggle="modal" data-bs-target="#showModal"><i class="ri-pencil-fill fs-16 edit-icon" id="edit_icon_id_3"></i></button></a>
